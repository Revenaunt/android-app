<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <TextView
        android:id="@+id/check_in_reward_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/material_header_size"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:paddingRight="20dp"
        android:background="@color/grow_primary"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:text="@string/check_in_reward_great_job" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:fillViewport="true" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/check_in_reward_preface"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:paddingRight="20dp"
                    android:paddingTop="30dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="20sp"
                    android:textColor="@color/dark_text_color" />

                <TextView
                    android:id="@+id/check_in_reward_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:paddingRight="20dp"
                    android:paddingTop="15dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/dark_text_color"
                    android:lineSpacingExtra="2dp" />

                <TextView
                    android:id="@+id/check_in_reward_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginRight="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="16sp" />

            </LinearLayout>
        </ScrollView>

        <!-- Fade out edge -->
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/activity_check_in_gradient" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp" >

        <ViewSwitcher
            android:id="@+id/check_in_reward_switcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp" >

            <ImageView
                android:id="@+id/check_in_reward_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_refresh"
                android:tint="@color/grow_primary" />

            <ProgressBar
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center" />

        </ViewSwitcher>

        <ImageView
            android:id="@+id/check_in_reward_overflow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_overflow_vertical_white"
            android:tint="@color/grow_primary" />

    </LinearLayout>
</LinearLayout>
