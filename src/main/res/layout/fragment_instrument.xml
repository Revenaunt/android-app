<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:background="@color/login_background"
            android:paddingLeft="20dp"
            android:minHeight="@dimen/material_header_size"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="0dp" >

            <TextView
                android:id="@+id/instrument_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:text="@string/qol_header_label"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/instrument_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/instrument_header"
                android:layout_marginLeft="5dp"
                android:text="@string/qol_header_info_label"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white" />

        </RelativeLayout>

        <ProgressBar
            android:id="@+id/instrument_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:id="@+id/instrument_loading"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/instrument_survey_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:animateLayoutChanges="true"
            android:clipToPadding="false"
            android:gravity="center"
            android:padding="20dp" />

        <!-- Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/instrument_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_gravity="right"
            android:gravity="center"
            android:minHeight="@dimen/paper_flat_button_min_height"
            android:text="@string/qol_next_button"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@drawable/button_paper_flat_text_selector"
            android:background="@drawable/button_positive_rounded" />

    </LinearLayout>
</ScrollView>
