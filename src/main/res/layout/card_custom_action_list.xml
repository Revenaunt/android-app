<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="@dimen/card_view_corner_radius" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@color/primary"
            android:text="@string/custom_action_list_header"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="@string/custom_action_list_sub_header"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:textColor="@color/dark_text_color" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/custom_action_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:padding="0dp" />

        <ViewSwitcher
            android:id="@+id/custom_action_list_switcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="15dp" >

            <TextView
                android:id="@+id/custom_action_list_create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/custom_action_list_create"
                android:textAllCaps="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/secondary_text_color" />

            <ProgressBar
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center" />

        </ViewSwitcher>
    </LinearLayout>
</android.support.v7.widget.CardView>
