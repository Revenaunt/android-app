<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="9dp"
    android:layout_marginRight="10dp"
    card_view:cardCornerRadius="@dimen/cardview_corner_radius" >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" >

        <EditText
            android:id="@+id/custom_action_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textCapSentences" />

        <ImageView
            android:id="@+id/custom_action_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:visibility="gone"
            android:src="@drawable/ic_edit_white_36dp"
            android:tint="@color/grow_primary" />

        <ImageView
            android:id="@+id/custom_action_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:visibility="gone"
            android:src="@drawable/ic_check_white_36dp"
            android:tint="@color/grow_primary" />

        <ImageView
            android:id="@+id/custom_action_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_add_white_36dp"
            android:tint="@color/grow_primary" />

        <ImageView
            android:id="@+id/custom_action_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:visibility="gone"
            android:src="@drawable/ic_delete_white_36dp"
            android:tint="@color/delete" />

    </LinearLayout>
</android.support.v7.widget.CardView>