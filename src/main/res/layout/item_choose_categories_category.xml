<?xml version="1.0" encoding="utf-8"?>
<org.tndata.android.compass.ui.SquareView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp"
    android:visibility="invisible" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/choose_categories_category_tile"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/choose_categories_category_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#99000000"
            android:visibility="gone" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:paddingTop="5dp"
            android:paddingLeft="15dp"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:background="@color/white" >

            <org.tndata.android.compass.ui.FontFitTextView
                android:id="@+id/choose_categories_category_caption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="5dp"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <ImageView
                android:id="@+id/choose_categories_category_more_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_blue_info" />

        </LinearLayout>
    </RelativeLayout>
</org.tndata.android.compass.ui.SquareView>
