<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <org.tndata.android.compass.ui.HeroView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grow_primary" />

        <FrameLayout
            android:id="@+id/behavior_progress_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="16dp" >

        <ImageButton
            android:id="@+id/behavior_progress_on_track"
            android:layout_width="@dimen/fab_size_normal"
            android:layout_height="@dimen/fab_size_normal"
            android:src="@drawable/compass_1_n"
            android:scaleType="fitCenter"
            android:background="@drawable/circle_primary"
            android:contentDescription="@string/behavior_progress_on_track" />

        <ImageButton
            android:id="@+id/behavior_progress_seeking"
            android:layout_width="@dimen/fab_size_normal"
            android:layout_height="@dimen/fab_size_normal"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/compass_5_e"
            android:scaleType="fitCenter"
            android:background="@drawable/circle_primary"
            android:contentDescription="@string/behavior_progress_seeking" />

        <ImageButton
            android:id="@+id/behavior_progress_off_course"
            android:layout_width="@dimen/fab_size_normal"
            android:layout_height="@dimen/fab_size_normal"
            android:src="@drawable/compass_9_s"
            android:scaleType="fitCenter"
            android:background="@drawable/circle_primary"
            android:contentDescription="@string/behavior_progress_off_course" />

    </LinearLayout>
</LinearLayout>
