<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:id="@+id/card_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginTop="5dp"
                                    card_view:cardCornerRadius="@dimen/cardview_corner_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="2dp">

        <View
            android:id="@+id/list_item_choose_goal_image_backview"
            android:layout_width="@dimen/goal_icon_image_size"
            android:layout_height="@dimen/goal_icon_image_size"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@color/image_background"/>

        <RelativeLayout
            android:id="@+id/list_item_choose_goal_imageview_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/list_item_choose_goal_image_backview"
            android:layout_alignRight="@id/list_item_choose_goal_image_backview"
            android:layout_alignTop="@id/list_item_choose_goal_image_backview"
            android:layout_alignBottom="@id/list_item_choose_goal_image_backview"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:contentDescription="@string/goal_image_description"
            android:background="@drawable/circle">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/list_item_choose_goal_icon_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_new_large"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/list_item_choose_goal_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/list_item_choose_goal_image_backview"
            android:paddingLeft="2dp"
            android:textColor="@color/dark_text_color"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <Button
            android:id="@+id/list_item_choose_goal_more_info_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_choose_goal_title_textview"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/list_item_choose_goal_image_backview"
            android:background="@drawable/button_paper_flat"
            android:minHeight="@dimen/paper_flat_button_min_height"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="@string/choose_goals_list_item_more_info_label"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@drawable/button_paper_flat_text_selector"/>

        <Button
            android:id="@+id/list_item_choose_goal_select_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_choose_goal_title_textview"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_positive_rounded"
            android:minHeight="@dimen/paper_flat_button_min_height"
            android:minWidth="@dimen/paper_flat_button_min_width"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="@string/choose_goals_list_item_select_button"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>