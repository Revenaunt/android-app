<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp" >

        <TextView
            android:id="@+id/dialog_behavior_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/dark_text_color" />

        <TextView
            android:id="@+id/dialog_behavior_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/secondary_text_color"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- It's still to have TWO cancel buttons but I can't seem to use only 1 and
             still position it correctly. It's easier to have two cancel buttons and just
             swap their visibility, rather than having 1 button and trying to position it
             to the left/start of two others. -->
        
        <Button
            android:id="@+id/behavior_dialog_cancel_confirm"
            android:layout_margin="8dp"
            android:text="@string/behavior_dialog_confirm_cancel"
            android:layout_toStartOf="@+id/behavior_dialog_confirm"
            android:visibility="gone"
            style="@style/FlatButton"/>

        <Button
            android:id="@+id/behavior_dialog_confirm"
            android:layout_margin="8dp"
            android:layout_alignParentEnd="true"
            android:text="@string/behavior_dialog_confirm"
            android:visibility="gone"
            style="@style/FlatButton" />

        <Button
            android:id="@+id/behavior_dialog_cancel"
            android:layout_margin="8dp"
            android:text="@string/behavior_dialog_confirm_cancel"
            android:layout_toStartOf="@+id/behavior_dialog_remove"
            style="@style/FlatButton"/>

        <Button
            android:id="@+id/behavior_dialog_remove"
            android:layout_margin="8dp"
            android:text="@string/behavior_dialog_remove"
            style="@style/FlatButton"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</LinearLayout>