<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <Button
        android:id="@+id/playground_button_start"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:padding="10dp"
        android:text="Start Service" />

    <Button
        android:id="@+id/playground_button_kill"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:padding="10dp"
        android:text="Kill Service" />

    <at.grabner.circleprogress.CircleProgressView
        xmlns:progress="http://schemas.android.com/apk/res-auto"
        android:id="@+id/playground_circle"
        android:layout_width="277dp"
        android:layout_height="277dp"
        progress:cpv_barColor="#00796B"
        progress:cpv_barWidth="35dp"
        progress:cpv_contourSize="0dp"
        progress:cpv_maxValue="100"
        progress:cpv_rimColor="#B2DFDB"
        progress:cpv_rimWidth="35dp"
        progress:cpv_seekMode="true"
        progress:cpv_textColor="#00796B"
        progress:cpv_unit="%"
        progress:cpv_unitColor="#009688" />

</LinearLayout>
