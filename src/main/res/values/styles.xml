<resources>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="MainDrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">#8000</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="MenuButtonStyle">
        <item name="fab_size">mini</item>
    </style>

    <style name="MenuLabelStyle">
        <item name="android:background">@null</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Text styles -->
    <style name="MaterialHeaderTitleText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MaterialHeaderSubtitleText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TitleText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/dark_text_color</item>
    </style>

    <style name="ItemTitleText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/ltd_text_color</item>
    </style>

    <style name="ItemSubtitleText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/light_text_color</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ItemFooterText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/ltd_text_color</item>
    </style>

    <style name="CardTitleText">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="CardContentText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="FlatButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/flat_button_margin</item>
        <item name="android:paddingLeft">@dimen/flat_button_padding</item>
        <item name="android:paddingRight">@dimen/flat_button_padding</item>
        <item name="android:minWidth">@dimen/flat_button_min_width</item>
        <item name="android:minHeight">@dimen/flat_button_min_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/flat_button_text_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:radius">@dimen/flat_button_corner_radius</item>
    </style>

</resources>
