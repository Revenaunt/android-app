<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Application theme. -->
    <style name="CustomActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionMenuTextColor">@color/actionbar_text</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowActionBarOverlay">false</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="BadgeTheme" parent="CustomActionBarTheme">
        <item name="colorPrimaryDark">@color/badge_primary_dark</item>
    </style>

    <style name="LogInTheme" parent="CustomActionBarTheme">
        <item name="colorAccent">@color/accent_login</item>
    </style>

    <style name="MainTheme" parent="CustomActionBarTheme">
        <item name="android:actionMenuTextColor">@color/actionbar_text</item>
        <item name="drawerArrowStyle">@style/MainDrawerArrowStyle</item>
    </style>

</resources>