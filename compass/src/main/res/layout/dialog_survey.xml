<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <org.tndata.android.compass.ui.SurveyView
        android:id="@+id/survey_survey_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="end" >

        <Button
            android:id="@+id/survey_negative"
            style="@style/FlatButton"
            android:textColor="@color/secondary_text_color"
            android:text="@string/button_negative" />

        <Button
            android:id="@+id/survey_positive"
            style="@style/FlatButton"
            android:text="@string/button_positive" />

    </LinearLayout>
</LinearLayout>
